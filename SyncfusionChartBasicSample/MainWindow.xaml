<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SyncfusionChartBasicSample"
        xmlns:chart="http://schemas.syncfusion.com/wpf" x:Class="SyncfusionChartBasicSample.MainWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>

        <chart:SfChart Name="Chart" Header="Chart Header" HorizontalAlignment="Center" Margin="10,10,9.6,10" VerticalAlignment="Center" Height="400">
            <chart:SfChart.PrimaryAxis>
                <chart:NumericalAxis FontSize="10" Header="Primary Axis" Maximum="10" Minimum="0" ShowGridLines="False"/>
            </chart:SfChart.PrimaryAxis>
            <chart:SfChart.SecondaryAxis>
                <chart:NumericalAxis FontSize="10" Header="Secondary Axis" Maximum="100" Minimum="0"/>
            </chart:SfChart.SecondaryAxis>
        </chart:SfChart>

    </Grid>
</Window>
